{
  "name": "heb-pizza-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "ng build",
    "docker-build": "docker build -t heb-pizza-app .",
    "docker-build-and-run": "npm run docker-build && npm run docker-run",
    "docker-run": "docker run -p 8080:80 heb-pizza-app",
    "e2e": "start-server-and-test 'ng serve' http://localhost:4200 'npx playwright test --headed'",
    "full-check": "npm run lint:fix && npm run lint && npm run build && npm run test-no-watch && npm run e2e && npm run docker-build",
    "lint": "npm run prettier && ng lint",
    "lint:fix": "npx eslint . --ext .ts,.html --fix",
    "ng": "ng",
    "prettier": "prettier --write \"src/**/*.{ts,js,html,css,scss}\" package.json",
    "prettier:check": "prettier --check \"src/**/*.{ts,js,html,css,scss}\" package.json",
    "start": "ng serve",
    "test": "ng test",
    "test-no-watch": "ng test --watch=false",
    "watch": "ng build --watch --configuration development"
  },
  "dependencies": {
    "@angular/animations": "^19.2.2",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@eslint/js": "^9.23.0",
    "@tailwindcss/postcss": "^4.0.16",
    "dotenv": "^16.4.7",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.3",
    "@angular/cli": "^19.2.3",
    "@angular/compiler-cli": "^19.2.0",
    "@playwright/test": "^1.51.1",
    "@types/jasmine": "~5.1.7",
    "angular-eslint": "19.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-check-file": "^3.1.0",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "start-server-and-test": "^2.0.11",
    "tailwindcss": "^4.0.16",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.26.0"
  }
}
